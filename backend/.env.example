# Learnnect AI Chatbot Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# API KEYS (Required)
# =============================================================================

# Groq API Key (Required) - Get from https://console.groq.com
# Example: gsk_1234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef
GROQ_API_KEY=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

# Google Translate API Key (Optional) - Get from Google Cloud Console
# Example: AIzaSyA1B2C3D4E5F6G7H8I9J0K1L2M3N4O5P6Q
GOOGLE_TRANSLATE_API_KEY=your_google_translate_api_key_here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Redis Configuration (Memory/Context Storage)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# ChromaDB Configuration (Vector Database)
CHROMADB_HOST=localhost
CHROMADB_PORT=8001

# =============================================================================
# SERVICE CONFIGURATION
# =============================================================================

# n8n Workflow Automation
N8N_WEBHOOK_URL=http://localhost:5678/webhook/chatbot

# Ollama Local LLM
OLLAMA_HOST=http://localhost:11434

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# FastAPI Server Settings
HOST=0.0.0.0
PORT=8000

# Logging Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# =============================================================================
# AI MODEL CONFIGURATION
# =============================================================================

# Whisper Model Size (tiny, base, small, medium, large)
# Recommendation: 'base' for good balance of speed and accuracy
WHISPER_MODEL=base

# Ollama Model (will be downloaded automatically)
OLLAMA_MODEL=llama2:7b-chat

# Text-to-Speech Engine (espeak or festival)
TTS_ENGINE=espeak

# =============================================================================
# OPTIONAL FEATURES
# =============================================================================

# Enable/Disable Features
ENABLE_VOICE_PROCESSING=true
ENABLE_FILE_PROCESSING=true
ENABLE_N8N_INTEGRATION=true

# File Upload Limits
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=pdf,docx,txt,csv,json,xlsx

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development Mode (true for development, false for production)
DEBUG_MODE=true

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://learnnect.com

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# JWT Secret (generate a random string for production)
JWT_SECRET=your_jwt_secret_here

# API Key for Admin Endpoints (optional)
ADMIN_API_KEY=your_admin_api_key_here
